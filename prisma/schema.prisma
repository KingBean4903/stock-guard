generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
		moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Inventory {
  id            String   @id @default(uuid())
  sku           String   @unique
  productName   String
  quantity      Int
  reserved      Int      @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([sku])
}

